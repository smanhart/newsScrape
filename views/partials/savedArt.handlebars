<div class="card horizontal">
    <div class="card-image">
        <img src="{{this.picture}}">
    </div>
    <div class="card-stacked">
        <div class="card-content">
            <span class="card-title"><a class="articleLink" href={{this.link}} target="_blank">{{this.title}}</a></span>
            <p>{{this.summary}}</p>
        </div>
        <div class="card-action">
            <a class="waves-effect waves-light btn-flat unsave-article" data-id="{{this.id}}">Remove From Saved</a>
            <a class="waves-effect waves-light btn-flat add-note modal-trigger" data-id="{{this.id}}">Comments</a>
        </div>
    </div>
</div>